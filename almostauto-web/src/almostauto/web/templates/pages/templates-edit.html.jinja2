{% extends "base.html.jinja2" %}
{% block content %}
    <div hx-target="this" hx-swap="innerHTML">
        <div id="controls">
            <button hx-get="/templates/{{ template.id }}/edit" hx-target="#template">Edit</button>
            <button hx-delete="/templates/{{ template.id }}" hx-push-url="/templates" hx-target="#content" hx-swap="innerHTML">Delete</button>
        </div>
        <div id="template">
        {% block template %}
        <form hx-put="/templates/{{ template.id }}" hx-target="#template" hx-ext="json-enc">
            <label for="title">Title</label>
            <input name="title" type="text" value="{{ template.title }}">
            <button type="submit">Submit</button>
        </form>
        {% endblock %}
        </div>
        <div id="steps">
            {% for step in steps %}
            
            {% endfor %}
        </div>
    </div>
{% endblock %}
